{
  "name": "hippohr/phpcs-coding-standard",
  "description": "",
  "scripts": {
    "pre-test": [
      "phpcs --config-set installed_paths ../../../Hippo"
    ],
    "test": [
      "@composer pre-test",
      "phpunit --filter \"Hippo\" --bootstrap vendor/squizlabs/php_codesniffer/tests/bootstrap.php vendor/squizlabs/php_codesniffer/tests/AllTests.php"
    ]
  },
  "config": {
    "sort-packages": true
  },
  "require-dev": {
    "phpunit/phpunit": "6.5.7",
    "squizlabs/php_codesniffer": "3.2.3"
  }
}
